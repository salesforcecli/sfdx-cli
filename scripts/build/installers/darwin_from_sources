#!/usr/bin/env bash

set -ex

export OS=darwin
export ARCH=x64

source ./scripts/_init

if [[ ! -e "$RELEASE_DIR/$INSTALLER_BASE_NAME-darwin-x64.tar.gz" ]]; then
    script "build/common"
    script "build/workspace"
    script "build/tarballs"
fi

export SHORT_VERSION
export VERSION
export INSTALLER_BASE_NAME
export TMP_DIR
export RELEASE_DIR
export RESOURCES_DIR
export BIN_NAME
export PKG_NAME
export PKG_DESC
export PKG_DIR
export OSX_SIGNING_IDENTITY

script "build/installers/darwin_package"
